<% if @person == current_user %>
  <h1>Welcome, <%= @person.first_name %>!</h1>
  <h6><%= link_to 'Edit Profile', edit_person_path(@person) %></h6>
  <h6><%= link_to 'Log Out', logout_path(:user_id), method: :delete %></h6>
  <h3><%= @person.about_me %></h3>
<% else %>
  <h1><%= @person.first_name %></h1>
  <h3><%= @person.about_me %></h3>
<% end %>

<h3><%= link_to 'Search', people_path %>